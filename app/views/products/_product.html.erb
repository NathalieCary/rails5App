
<a>
	<div class="col-xs-12 col-md-4 product_info">
		<%= image_tag(product.image_url, class: "img-responsive img-catalogue") %>
			<h3><%= product.name %></h3>
				<h5><%= product.description %></h5>
					<h6>&#36;<%= product.price %></h6>
						<p><%= link_to 'Show', product %></p>

		<% if signed_in? && current_user.admin? %>
			<p><%= link_to 'Edit', edit_product_path(product) %></p>
			<p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
		<% end %>
	</div><!-- /col -->
</a>

   